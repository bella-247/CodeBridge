{
  "manifest_version": 3,
  "name": "Code Bridge",
  "version": "1.0.0",
  "description": "Code Bridge: Effortlessly sync your solved problems from LeetCode, Codeforces, and HackerRank to GitHub. Organizes your solutions into clean, structured repository folders automatically.",
  "permissions": [
    "identity",
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "https://codeforces.com/*",
    "https://*.codeforces.com/*",
    "https://hackerrank.com/*",
    "https://*.hackerrank.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Save Coding Solution to GitHub"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://codeforces.com/*",
        "https://*.codeforces.com/*",
        "https://hackerrank.com/*",
        "https://*.hackerrank.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false,
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/bridge.js",
        "src/adapters/*.js",
        "src/scrapers/*.js"
      ],
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://codeforces.com/*",
        "https://*.codeforces.com/*",
        "https://hackerrank.com/*",
        "https://*.hackerrank.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
