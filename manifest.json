{
    "manifest_version": 3,
    "name": "LeetCode â†’ GitHub Exporter",
    "version": "1.0.0",
    "description": "Export solved LeetCode problems to a GitHub repository as organized folders with solution and README.",
    "permissions": [
        "storage",
        "notifications",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": ["https://leetcode.com/*", "https://api.github.com/*"],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Save LeetCode solution to GitHub"
    },
    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["https://leetcode.com/*"],
            "js": ["src/content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}
